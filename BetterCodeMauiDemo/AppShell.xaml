<?xml version="1.0" encoding="UTF-8"?>
<Shell
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:views="clr-namespace:BetterCodeMauiDemo.Views"
        x:Class="BetterCodeMauiDemo.AppShell"
        BackgroundColor="{StaticResource PrimaryColor}">
    <Shell.FlyoutHeader>
        <VerticalStackLayout BackgroundColor="{StaticResource PrimaryColor}" Padding="20">
            <Image Source="bcnlogo.svg" WidthRequest="300" HeightRequest="50" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>
    <FlyoutItem Title="Start">
        <ShellContent ContentTemplate="{DataTemplate views:MainPage}"
                      Route="start" />
    </FlyoutItem>
    <FlyoutItem Title="Programm">
        <ShellContent ContentTemplate="{DataTemplate views:SessionsPage}"
                      Route="sessions" />
    </FlyoutItem>

</Shell>